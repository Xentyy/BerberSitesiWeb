@{
    ViewBag.Title = "Saç Modeli Önerisi";
}

<div class="container fade-in mt-4">

    <h2 class="text-center mb-3">Saç Modeli Önerisi</h2>
    <p class="text-center text-muted">Kendinize en uygun saç modelini seçmek için fotoğraf yükleyin.</p>

    <div class="card shadow p-4 mt-4" style="max-width:600px;margin:auto;">
        <form method="post" enctype="multipart/form-data" asp-action="ProcessImage">
            <div class="mb-3">
                <label for="uploadedImage" class="form-label">Fotoğraf Yükle</label>
                <input type="file" class="form-control" id="uploadedImage" name="uploadedImage" required />
            </div>
            <div class="mb-3">
                <label for="style" class="form-label">Saç Modeli Seçimi</label>
                <select class="form-select" id="style" name="style" required>
                    @foreach (var hairStyle in ViewBag.HairStyles)
                    {
                        <option value="@hairStyle.Key">@hairStyle.Value</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary w-100">Gönder</button>
        </form>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3 text-center">
            @TempData["ErrorMessage"]
        </div>
    }
</div>
