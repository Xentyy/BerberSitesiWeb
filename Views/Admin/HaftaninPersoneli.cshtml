@{
    ViewBag.Title = "Haftanın Personeli";
}

<h2 class="text-center my-4">Haftanın Personeli</h2>

@if (!string.IsNullOrEmpty(ViewBag.EmployeeName))
{
    <div class="card text-center shadow mt-3" style="max-width:400px;margin:auto;">
        <div class="card-header bg-success text-white">
            Haftanın Çalışanı
        </div>
        <div class="card-body">
            <h5 class="card-title">@ViewBag.EmployeeName</h5>
            <p class="card-text">Toplam Kazanç: @ViewBag.TotalEarnings TL</p>
        </div>
    </div>
}
else
{
    <p>Herhangi bir personel bilgisi bulunamadı.</p>
}
