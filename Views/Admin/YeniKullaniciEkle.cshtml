@model BerberSite.Models.User

@{
    ViewBag.Title = "Yeni Kullanıcı Ekle";
}

<h2 class="text-center my-4">Yeni Kullanıcı Ekle</h2>

<div class="d-flex justify-content-center mt-3">
    <div class="card" style="width: 500px;">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="card-title">Yeni Kullanıcı Ekle</h4>
        </div>
        <div class="card-body">
            <form asp-action="YeniKullaniciEkle" method="post">
                <div class="mb-3">
                    <label class="form-label">Ad</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Soyad</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Telefon</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">E-Posta</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Şifre</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Rol</label>
                    <select asp-for="Role" class="form-control" asp-items="Html.GetEnumSelectList<BerberSite.Models.Role>()"></select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success w-100">Kaydet</button>
            </form>
        </div>
    </div>
</div>
