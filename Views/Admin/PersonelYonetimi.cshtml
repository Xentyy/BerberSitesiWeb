@model IEnumerable<BerberSite.Models.Employee>
@{
    ViewBag.Title = "Personel Yönetimi";
}

<h2>Personel Yönetimi</h2>
<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Surname</td>
                <td>@emp.Email</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="PersonelDuzenle" asp-route-id="@emp.Id">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
