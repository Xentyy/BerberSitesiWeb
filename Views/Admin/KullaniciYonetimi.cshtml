@model IEnumerable<BerberSite.Models.User>

@{
    ViewBag.Title = "Kullanıcı Yönetimi";
}

<h2 class="text-center my-4">Kullanıcı Yönetimi</h2>

<div class="mb-3 text-center">
    <a class="btn btn-primary" asp-action="YeniKullaniciEkle">Yeni Kullanıcı Ekle</a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>E-Posta</th>
            <th>Telefon</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Role</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="KullaniciDuzenle" asp-route-id="@user.Id">Düzenle</a>
                    <form asp-action="KullaniciSil" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
