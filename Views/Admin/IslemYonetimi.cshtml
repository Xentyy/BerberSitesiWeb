@model IEnumerable<BerberSite.Models.Operation>

@{
    ViewBag.Title = "İşlem Yönetimi";
}

<h2 class="text-center my-4">İşlem Yönetimi</h2>

<div class="mb-3 text-center">
    <a class="btn btn-primary" asp-action="YeniIslemEkle">Yeni İşlem Ekle</a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>İşlem Adı</th>
            <th>Fiyat</th>
            <th>Süre</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var op in Model)
        {
            <tr>
                <td>@op.OperationName</td>
                <td>@op.Price</td>
                <td>@op.Duration</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="IslemDuzenle" asp-route-id="@op.Id">Düzenle</a>
                    <form asp-action="IslemSil" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@op.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
