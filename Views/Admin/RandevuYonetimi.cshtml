@model IEnumerable<BerberSite.Models.Appointment>
@{
    ViewBag.Title = "Randevu Yönetimi";
}

<h2>Randevu Yönetimi</h2>
<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Personel</th>
            <th>Operasyon</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Fiyat</th>
            <th>Süre</th>
            <th>Onaylı mı?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@(app.Employee?.Name ?? "") @(app.Employee?.Surname ?? "")</td>
                <td>@app.Operation?.OperationName</td>
                <td>@app.StartTime</td>
                <td>@app.EndTime</td>
                <td>@app.Price</td>
                <td>@app.Duration</td>
                <td>@(app.IsApproved ? "Evet" : "Hayır")</td>
            </tr>
        }
    </tbody>
</table>
