@model BerberSite.Models.Operation
@{
    ViewBag.Title = "İşlem Düzenle";
}

<h2>İşlem Düzenle</h2>

<div class="d-flex justify-content-center mt-3">
    <div class="card" style="width: 500px;">
        <div class="card-header bg-info text-white">
            <h4 class="card-title">İşlem Düzenle</h4>
        </div>
        <div class="card-body">
            <form asp-action="IslemDuzenle" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label>İşlem Adı</label>
                    <input asp-for="OperationName" class="form-control" />
                    <span asp-validation-for="OperationName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Fiyat</label>
                    <input asp-for="Price" class="form-control" type="number" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Süre (dk)</label>
                    <input asp-for="Duration" class="form-control" type="number" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Güncelle</button>
            </form>
        </div>
    </div>
</div>
